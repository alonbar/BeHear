<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mycompany.behear.MainActivity"
    android:background="#035475"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:id="@+id/bar"
        android:background="#035475">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ebebe0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/whats"
            android:textSize="15dp"
            android:text="@string/whats"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:background="@null"

            />
        <ImageView
            android:id="@+id/logo"
            android:textColor="#ebebe0"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:src="@drawable/new_logo"
            android:layout_alignBottom="@+id/whats"
            android:layout_centerHorizontal="true" />

        <Button
            android:textColor="#ebebe0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/about"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/about"
            android:clickable="true"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"

             />

    </RelativeLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        map:mapType="normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/checkbox_votes"
        android:layout_below="@+id/bar"
        android:background="@color/blue"/>

    <CheckBox
        android:id="@+id/offlineMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/offlineMode"
        android:checked="false"
        android:buttonTint="#ebebe0"
        android:textColor="#ebebe0"
        android:textStyle="italic"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qm"
        android:id="@+id/explore_qm"
        android:layout_toRightOf="@+id/offlineMode"
        android:layout_below="@+id/votes_qm"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@id/votes_qm" />

    <CheckBox android:id="@+id/checkbox_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/votes"
        android:layout_above="@+id/offlineMode"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:buttonTint="#ebebe0"
        android:textColor="#ebebe0"
        />
    <!--android:buttonTint="@color/common_plus_signin_btn_text_light"-->
    <!--android:textColor="#787373" />-->

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qm"
        android:id="@+id/votes_qm"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/map"
        android:layout_toRightOf="@+id/checkbox_votes" />


    <CheckBox
        android:id="@+id/checkbox_socio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/socio"
        android:checked="false"
        android:buttonTint="#ebebe0"
        android:textColor="#ebebe0"
        android:layout_below="@+id/map"
        android:layout_alignParentLeft="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qm"
        android:id="@+id/socio_qm"
        android:layout_below="@id/map"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/checkbox_socio"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qm"
        android:id="@+id/crime_qm"
        android:layout_below="@id/map"
        android:layout_marginTop="6dp"
        android:layout_alignParentRight="true"/>

    <CheckBox android:id="@+id/check_box_property_crime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/property"
        android:checked="false"
        android:buttonTint="#ebebe0"
        android:textColor="#ebebe0"
        android:layout_below="@+id/map"

        android:layout_toLeftOf="@id/crime_qm"
 />




</RelativeLayout>
