<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
    >
<ImageView
    android:id="@+id/logoDialog"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginTop="15dp"
    android:textColor="@color/colorPrimary"
    android:layout_centerHorizontal="true"
    android:background="@drawable/_icon" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/app_explanation"
    android:id="@+id/app_Exp"
    android:textAlignment="center"
    android:layout_below="@id/logoDialog"
    android:layout_margin="15dp"
    />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="@string/about1"
    android:id="@+id/app_dev1"
    android:textStyle="bold"
    android:layout_below="@id/app_Exp"
    android:textAlignment="center"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_marginTop="15dp"
    android:text="@string/about2"
    android:id="@+id/app_dev2"
    android:layout_below="@id/app_dev1"
    android:textAlignment="center"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="15dp"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/about3"
    android:id="@+id/app_dev3"
    android:layout_below="@id/app_dev2"
    android:layout_margin="15dp"
    android:textAlignment="center"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/about4"
    android:id="@+id/app_dev4"
    android:layout_below="@id/app_dev3"
    android:textAlignment="center"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_marginTop="15dp"
    android:text="@string/about5"
    android:id="@+id/app_dev5"
    android:layout_below="@id/app_dev4"
    android:textAlignment="center"
    android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/about_thanks"
        android:id="@+id/app_thanks"
        android:layout_below="@id/app_dev5"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/about_mail1"
        android:id="@+id/app_mail1"
        android:layout_below="@id/app_thanks"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/about_mail2"
        android:id="@+id/app_mail2"
        android:layout_below="@id/app_mail1"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>